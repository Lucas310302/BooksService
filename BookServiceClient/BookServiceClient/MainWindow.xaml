<Window x:Class="BookServiceClient.MainWindow"
        ResizeMode="CanMinimize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookServiceClient"
        xmlns:helpers="clr-namespace:BookServiceClient.Helpers"
        mc:Ignorable="d"
        Title="BogShop.DK" Height="450" Width="800">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="401*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="BooksGrid" Margin="0,33,0,0" Grid.Row="1" d:IsHidden="True">
            <TextBlock x:Name="SearchDisplay" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Height="24" Width="auto" FontSize="15" Foreground="#FF22476D" TextAlignment="Center" Margin="0,10,0,0" Text="All Books:"/>
            <ScrollViewer Margin="10,34,0,0">
                <WrapPanel x:Name="BooksPanel" Height="auto" Width="771"/>
            </ScrollViewer>
        </Grid>
        <Grid x:Name="HeaderGrid" Height="66" VerticalAlignment="Top" HorizontalAlignment="Center" Width="800" Grid.RowSpan="2">
            <Rectangle x:Name="HeaderRect" Height="70" Stroke="Black" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="810" Margin="0,0,0,-2"/>
            <TextBlock x:Name="HeaderTitle" Margin="313,0,309,0" TextWrapping="Wrap" Height="42" FontSize="30" Foreground="#FF22476D" VerticalAlignment="Center"><Run Text="Bog"/><Run Language="da-dk" Text="-"/><Run Text="Shop."/><Run Language="da-dk" Text="DK"/><LineBreak/><Run Language="da-dk"/></TextBlock>
            <TextBox x:Name="SearchInput" helpers:WatermarkHelper.Watermark="Search..." KeyDown="SearchBooks_KeyDown" Margin="583,0,0,0" TextWrapping="Wrap" Width="186" Height="19" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button x:Name="ViewAllBooks" Content="View All Books -&gt;" Height="42" Background="White" Margin="0,0,534,0" VerticalAlignment="Center" HorizontalAlignment="Right" Width="144" Click="ViewAllBooks_Click"/>
            <Button x:Name="AdminBtn" Content="Admin" Height="42" Background="White" Margin="0,0,707,0" VerticalAlignment="Center" HorizontalAlignment="Right" Width="72" Click="OpenAccPanel_Click"/>
        </Grid>
        <Grid x:Name="LoginGrid" Grid.RowSpan="2" d:IsHidden="True">
            <Rectangle x:Name="Header_1" Height="70" Stroke="Black" VerticalAlignment="Top" HorizontalAlignment="Center" Width="810" Margin="0,-2,0,0"/>
            <TextBlock x:Name="LoginTitle" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Login/Signup" VerticalAlignment="Top" Height="42" Width="182" FontSize="30"/>
            <TextBox x:Name="UsernameInput" helpers:WatermarkHelper.Watermark="Username..." HorizontalAlignment="Center" Margin="0,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" Height="28" FontSize="15" VerticalContentAlignment="Center"/>
            <TextBox x:Name="PasswordInput" helpers:WatermarkHelper.Watermark="Password..." HorizontalAlignment="Center" Margin="0,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" Height="28" FontSize="15" VerticalContentAlignment="Center"/>
            <Button x:Name="SubmitButton" Content="Login" IsDefault="True" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Width="121" Margin="0,217,0,0" BorderBrush="Black" Background="White" FontSize="15" VerticalContentAlignment="Center" Click="LoginButton_Click"/>
        </Grid>
    </Grid>
</Window>
